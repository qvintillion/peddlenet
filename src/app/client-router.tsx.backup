'use client';\n\nimport { useState, useEffect } from 'react';\nimport { useRouter, usePathname } from 'next/navigation';\nimport dynamic from 'next/dynamic';\n\n// Dynamically import pages to handle them properly\nconst HomePage = dynamic(() => import('./page'), { ssr: false });\nconst ChatRoomPage = dynamic(() => import('./chat/[roomId]/page'), { ssr: false });\n\nexport default function ClientRouter() {\n  const pathname = usePathname();\n  const router = useRouter();\n  const [isClient, setIsClient] = useState(false);\n\n  useEffect(() => {\n    setIsClient(true);\n  }, []);\n\n  // Handle client-side routing for static export\n  if (!isClient) {\n    return (\n      <div className=\"min-h-screen bg-gradient-to-br from-purple-900 via-black to-purple-900 text-white flex items-center justify-center\">\n        <div className=\"text-center\">\n          <div className=\"text-6xl mb-4\">ðŸŽª</div>\n          <div className=\"text-xl\">Loading...</div>\n        </div>\n      </div>\n    );\n  }\n\n  // Parse the path to determine which component to render\n  if (pathname.startsWith('/chat/')) {\n    const roomId = pathname.split('/chat/')[1];\n    if (roomId && roomId !== 'undefined' && roomId !== 'null') {\n      return <ChatRoomPage params={{ roomId }} />;\n    }\n  }\n\n  // Default to homepage\n  return <HomePage />;\n}\n